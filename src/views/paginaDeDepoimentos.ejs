<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pagina de depoimentos</title>
  </head>
  <body>
    <%- include('partials/header', { title: 'Pagina de depoimentos'}) %>

    <div class="container">
      <h1>depoimentos dos nossos clientes</h1>

      <ul class="depoimento">
        <% depoimentos.forEach(depoimento => { %>
         
        <span class="spar">
          <li><strong><%= depoimento.name %></strong></li>
          <br />

          <li><%= depoimento.mensagem %></li>

          <form action="/usuarios/deletar/<%= depoimento.id %>" method="POST">
            <button
              type="submit"
              onclick="return confirm('Tem certeza que deseja apagar?')"
              class="delete-button"
            >
              Deletar
            </button>
          </form>
        </span>

        <% }) %>
      </ul>
    </div>

    <%- include('partials/footer', { title: 'Pagina de depoimentos'}) %>
  </body>
</html>
